
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model BanNoiThatPagado.Models.ViewModels.SanPhamAddViewModel;

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sản phẩm
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Sửa sản phẩm</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form" asp-controller="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="box-body">
                            <input asp-for="Id" type="hidden" id="txtID">
                            <div class="form-group">
                                <label for="txtTen">Tên sản phẩm</label>
                                <input asp-for="Ten" type="text" class="form-control" id="txtTen" placeholder="Tên" onblur="ktra()">
                                <br /> <span id="ktraTen" style="color: red"></span>
                            </div>
                            <div class="form-group">
                                <label for="txtImage">Ảnh</label><br />
                                <img width="150" height="150" src="~/upload/@Model.Anh" />
                                <input asp-for="FileImage" type="file" class="form-control" id="txtImage">
                            </div>

                            <div class="form-group">
                                <label for="txtTen">Giá tiền</label>
                                <input asp-for="Gia" type="text" class="form-control" id="txtGia" placeholder="Giá tiền" onblur="ktra()">
                                <br /> <span id="ktraGia" style="color: red"></span>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
